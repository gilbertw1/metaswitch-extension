{
  "manifest_version": 2,
  "name": "EshopMetacritic",
  "version": "1.0",

  "description": "Adds metacritic scores to reviews in the nintendo eshop.",

  "content_scripts": [
    {
      "matches": ["*://*.nintendo.com/games/*", "*://*.nintendo.com/search/*"],
      "js": ["jquery-3.3.1.min.js", "eshop-metacritic.js"]
    }
  ],

  "permissions": [
    "<all_urls>"
  ]
}
